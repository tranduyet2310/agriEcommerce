<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightBlue"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ellips"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ellips"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/agrimart"
        style="@style/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"

        android:gravity="center"
        android:text="@string/appName"
        app:layout_constraintBottom_toTopOf="@+id/fullnameApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fullnameApp"
        style="@style/h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/fullNameApp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agrimart" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/leaf"
        app:layout_constraintBottom_toTopOf="@id/fullnameApp"
        app:layout_constraintStart_toEndOf="@id/agrimart" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:importantForAccessibility="no"
        android:src="@drawable/sunlight"
        app:layout_constraintBottom_toTopOf="@id/fullnameApp"
        app:layout_constraintStart_toStartOf="@id/fullnameApp" />

</androidx.constraintlayout.widget.ConstraintLayout>