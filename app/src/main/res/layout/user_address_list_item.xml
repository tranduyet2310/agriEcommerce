<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="@dimen/dimen1dp"
    app:cardCornerRadius="@dimen/dimen10dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvUserAddressName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/dimen10dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/full_name"
            android:textSize="@dimen/dimen16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUserAddressPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/_5_000_000"
            android:textSize="@dimen/dimen16sp"
            app:drawableStartCompat="@drawable/ic_phone_24"
            app:layout_constraintBottom_toBottomOf="@id/tvUserAddressName"
            app:layout_constraintStart_toEndOf="@+id/tvUserAddressName"
            app:layout_constraintTop_toTopOf="@id/tvUserAddressName" />

        <TextView
            android:id="@+id/tvUserAddressDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/dimen10dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_medium"
            android:maxLines="3"
            android:text="@string/type_product"
            android:textSize="@dimen/dimen14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvUserAddressName"
            app:layout_constraintTop_toBottomOf="@id/tvUserAddressName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>