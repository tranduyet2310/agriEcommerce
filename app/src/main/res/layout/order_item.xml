<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageOrderState"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignTop="@id/tvOrderId"
        android:layout_alignBottom="@id/tvOrderId"
        android:layout_gravity="center"
        android:src="@color/black" />

    <TextView
        android:id="@+id/tvOrderId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/imageOrderState"
        android:fontFamily="@font/inter_semibold"
        android:textColor="#4b4f60"
        android:textSize="15sp"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/ic_arrow"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/tvOrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tvOrderId"
        tools:text="@tools:sample/lorem" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#666666"
        android:backgroundTint="#97AABD"
        android:layout_below="@id/tvOrderDate"/>

</RelativeLayout>
