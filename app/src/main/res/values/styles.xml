<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="h1">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/heading1</item>
        <item name="android:textColor">@color/blackAgri</item>
    </style>
    <style name="h2">
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">@dimen/heading2</item>
        <item name="android:textColor">@color/blackAgri</item>
    </style>
    <style name="h3">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/heading3</item>
        <item name="android:textColor">@color/blackAgri</item>
    </style>
    <style name="h4">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/heading4</item>
        <item name="android:textColor">@color/blackAgri</item>
    </style>
    <style name="h5">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/heading5</item>
        <item name="android:textColor">@color/blackAgri</item>
    </style>
    <style name="toolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/heading3</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="color">@color/black</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RadioButton">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>
    <style name="OrdersTitleText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="RadioLabelText">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
    </style>

    <style name="FullScreenDialogStyle">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>